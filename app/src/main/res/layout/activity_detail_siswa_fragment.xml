<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/logo_siswa"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/avatar_male"
                />
            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Nama Lengkap"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.3"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nama_siswa"
                        android:layout_weight="20"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="TTL"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.3"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tempat_tanggal_lahir"
                        android:layout_weight="20"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Jenis Kelamin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.3"
                        android:textSize="18sp"
                        />
                    <RadioGroup
                        android:id="@+id/jenis_kelamin_siswa"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="20"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/lk_detail"
                            android:text="Laki-Laki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            />
                        <RadioButton
                            android:id="@+id/pr_detail"
                            android:layout_weight="2"
                            android:text="Perempuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Kelas"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.3"
                        />
                    <RadioGroup
                        android:id="@+id/tingkatan_kelas_siswa"
                        android:layout_weight="20"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/persiapan_siswa"
                            android:text="Tahun Persiapan"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/pertama_siswa"
                            android:text="Tahun Pertama"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:id="@+id/kedua_siswa"
                            android:text="Tahun Kedua"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RadioGroup>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Alamat"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.3"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_siswa"
                        android:layout_weight="20"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="NISN"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:text=":"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.3"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nisn_siswa"
                        android:inputType="number"
                        android:layout_weight="20"
                        />
                </TableRow>

            </TableLayout>
            <TableLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>

                    <com.google.android.material.button.MaterialButton
                        app:cornerRadius="20dp"
                        android:textColor="@color/white"
                        android:background="@color/success"
                        android:id="@+id/simpan_perubahan_siswa"
                        android:text="Simpan Perubahan"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </TableRow>
            </TableLayout>
            <com.google.android.material.button.MaterialButton
                app:cornerRadius="20dp"
                android:textColor="@color/white"
                android:background="@color/danger"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hapus_akun"
                android:text="Hapus Akun"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>