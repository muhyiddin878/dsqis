<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPostActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/progress_bar_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedang Mengupload"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    />
                <ProgressBar
                    android:id="@+id/progress_bar_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progress="25"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_below="@id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:background="@color/grey"
            android:id="@+id/add_photo_post"
            android:elevation="5dp"
            />

        <EditText
            android:layout_below="@id/add_photo_post"
            android:id="@+id/judul_post"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="4dp"
            android:inputType="textCapWords"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:hint="Judul Artikel"
            android:elevation="2dp"
            />
        <EditText
            android:layout_below="@id/judul_post"
            android:id="@+id/isi_post"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:hint="Apa Yang Akan di Diskusikan"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:nestedScrollingEnabled="true"
            android:scrollHorizontally="false"
            />
    </RelativeLayout>


</ScrollView>